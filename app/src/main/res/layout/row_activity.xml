<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:id="@+id/textLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Activity"
        android:textColor= "@color/blue"/>

    <TextView
        android:id="@+id/textLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textLabel1"
        android:layout_marginLeft="30dp"
        android:text="Date\Time"
        android:textColor= "@color/blue"/>

    <TextView
        android:id="@+id/textLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textLabel2"
        android:layout_marginLeft="50dp"
        android:text="Ammount"
        android:textColor= "@color/blue"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textLabel1"
        android:layout_marginTop="30dp"
        android:text="desc"
        android:textColor= "@color/black"/>

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/description"
        android:layout_marginTop="30dp"
        android:text="date"
        android:layout_marginLeft="50dp"
        android:textColor= "@color/black"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textLabel3"
        android:layout_toRightOf="@+id/datetime"
        android:layout_marginTop="30dp"
        android:text="ammount"
        android:textColor= "@color/black"/>

</RelativeLayout>