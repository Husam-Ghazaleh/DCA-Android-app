<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/diet_btn"
        android:background="@drawable/diet"
        android:onClick="addDiet">

    </ImageButton>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/exercise_btn"
        android:background="@drawable/exercise"
        android:onClick="addExercise"
        android:layout_marginStart="54dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/diet_btn">

    </ImageButton>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bgl_btn"
        android:background="@drawable/bgl"
        android:onClick="addBgl"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/medication_btn"
        android:layout_marginEnd="64dp">

    </ImageButton>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/medication_btn"
        android:background="@drawable/medication"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="addMedication">

    </ImageButton>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/imageView"
        android:background="@drawable/horizontalline"
        android:layout_below="@+id/diet_btn"
        android:layout_alignParentStart="true" />




</RelativeLayout>
